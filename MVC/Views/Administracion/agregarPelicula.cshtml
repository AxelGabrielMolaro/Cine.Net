@model MVC.Models.PeliculaModelAndView
@{
    ViewBag.Title = "agregarPelicula";
    Layout = "~/Views/Shared/_AdministradorBase.cshtml";
}

<div class="col-md-offset-3 col-md-6">
    <hr />
    <div class="btn btn-xs btn-default">
        @Html.ActionLink("Volver", "peliculas")
    </div>
    <div class="text-center"><h3>Agregar una pelicula</h3></div>
    <div>
        <form action="agregarPelicula" method="post">
            <div class="form-group">
                <label for="" class="control-label">Nombre</label>
                <div>
                    <input type="text" class="form-control" name="nombrePelicula" />
                    @Html.ValidationMessageFor(x => x.nombrePelicula)
                </div>
            </div>
            <div class="form-group">
                <label for="" class="control-label">Descripción</label>
                <div>
                    <textarea class="form-control" name="descripcionPelicula"></textarea>
                    @Html.ValidationMessageFor(x => x.descripcionPelicula)
                </div>
            </div>
            <div class="form-group">
                <label for="" class="control-label">Calificación</label>
                <div>
                    <select name="calificacionPelicula">
                        <option value="1"> Ver, por ahora va a ser 1 </option>
                        
                    </select>
                    @Html.ValidationMessageFor(x => x.calificacionPelicula)
                </div>
            </div>
            <div class="form-group">
                <label for="" class="control-label">Género</label>
                <div>
                    <select name="generoPelicula">
                        <option value="accion">  Aca iria el genero, por ahora accion</option>
                      
                    </select>
                    @Html.ValidationMessageFor(x => x.generoPelicula)
                </div>
            </div>
             Tengo dudas con la img
            <div class="form-group">
                <label for="" class="control-label" >Imagen</label>
                <div>
                    <input type="file" name="imagenPelicula" id="imagenPelicula"/>
                    @Html.ValidationMessageFor(x => x.imagenPelicula)
                </div>
            </div>
           
            <div class="form-group">
                <label for="" class="control-label">Duración</label>
                <div>
                    <input type="text" class="form-control" name="duracionPelicula"  />
                    @Html.ValidationMessageFor(x => x.duracionPelicula)
                </div>
            </div>
            <input type="submit" class="btn btn-block btn-success" value="Agregar película" />
        </form>
        <div class="text-center alert-danger"> <h4>@ViewBag.errorPelicula</h4></div>
    </div>
</div>

