@model MVC.Models.SedeModelAndView

@{
    ViewBag.Title = "agregarSede";
    Layout = "~/Views/Shared/_AdministradorBase.cshtml";
}

<div class="col-md-offset-3 col-md-6">
    <hr />
    <div class="">
       <a href="/Administracion/sedes"><input type="button" class="btn btn-info " value="volver al listado"/></a><!-- jajaj odio esos helpers, axel-->
    </div>
    <div class="text-center col-md-12">
        <h3>
            Agregar una sede
        </h3>
    </div>
    <div class="col-md-12 alert-danger">
        @ViewBag.errorSede
    </div>
    <div>
        <form class="form" action="/Administracion/agregarSedePost" method="post">
            <div class="form-group">
                <label for="" class="control-label">
                    Nombre:
                </label>
                <div>
                    <!--Este input id lo uso para saber si es una edicion o una adicion de sede-->
                    <input type="hidden" class="form-control" name="idSede" value="@Model.idSede" />
                    <input type="text" class="form-control" name="nombreSede" value="@Model.nombreSede"/>
                    <div class="alert-danger">@Html.ValidationMessageFor(x => x.nombreSede)</div>
                </div>
            </div>
            <div class="form-group">
                <label for="" class="control-label">
                    Dirección:
                </label>
                <div>
                    <input type="text" class="form-control" name="direccionSede" value="@Model.direccionSede"/>
                    <div class="alert-danger">@Html.ValidationMessageFor(x => x.direccionSede)</div> 
                </div>
            </div>
            <div class="form-group">
                <label for="" class="control-label">
                    Precio general de la entrada:
                </label>
                <div>
                    <input type="text" class="form-control" name="precioEntradaGeneral" value="@Model.precioEntradaGeneral" />
                    <div class="btn-danger">@Html.ValidationMessageFor(x => x.precioEntradaGeneral)</div>  
                </div>
            </div>
            <div>
                <input type="submit" class="btn btn-block btn-success" value="Agregar" />
            </div>
        </form>
    </div>
</div> 