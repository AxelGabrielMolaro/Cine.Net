@model  MVC.DAL.Sedes

@{
    ViewBag.Title = "agregarSede";
    Layout = "~/Views/Shared/_AdministradorBase.cshtml";
}

<div class="col-md-offset-3 col-md-6">
    <hr />
    <div class="btn btn-xs btn-default">
        @Html.ActionLink("Volver", "sedes")
    </div>
    <div class="text-center">
        <h3>
            Agregar una sede
        </h3>
    </div>
    <div>
        <form class="form" action="agregarSede" method="post">
            <div class="form-group">
                <label for="" class="control-label">
                    Nombre:
                </label>
                <div>
                    <input type="text" class="form-control" name="Nombre" />
                    @Html.ValidationMessageFor(x => x.Nombre)
                </div>
            </div>
            <div class="form-group">
                <label for="" class="control-label">
                    Dirección:
                </label>
                <div>
                    <input type="text" class="form-control" name="Direccion" />
                    @Html.ValidationMessageFor(x => x.Direccion)
                </div>
            </div>
            <div class="form-group">
                <label for="" class="control-label">
                    Precio general de la entrada:
                </label>
                <div>
                    <input type="number" class="form-control" name="PrecioGeneral" />
                    @Html.ValidationMessageFor(x => x.PrecioGeneral)
                </div>
            </div>
            <div>
                <input type="submit" class="btn btn-block btn-success" value="Agregar" />
            </div>
        </form>
    </div>
</div> 